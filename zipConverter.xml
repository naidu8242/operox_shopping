<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>DBScripts</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/java/com/bis/operox/db/migrations</directory>
			<outputDirectory>Operox_Db_Scripts/com/bis/operox/db/migrations</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/java/com/bis/operox/db/bin</directory>
			<outputDirectory>Operox_Db_Scripts/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/operox/WEB-INF/classes/com/bis/operox/db</directory>
			<outputDirectory>Operox_Db_Scripts/com/bis/operox/db</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
	    <dependencySet> 
		      <outputDirectory>Operox_Db_Scripts/lib/</outputDirectory>
		      <useProjectArtifact>true</useProjectArtifact>
		     <!--  <scope>runtime</scope> -->
	     </dependencySet>
  </dependencySets>
</assembly>